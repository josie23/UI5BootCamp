<mvc:View 
	xmlns="sap.m"  
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="SAPUI5BootCamp.controller.APP">
	<VBox>
		<Text text ="Username"/>
		<Input 
			value="{/field/username}" 
			type ="Text"
			description="Hello {/field/username}"
			valueLiveUpdate="true"
			width="50%"
			id="username" />
		
		<Text text ="Password"/>
		<Input type ="Password" width="50%" id="password"/>
		
		<Button text ="{i18n>loginButtonText}" press="onLoginPress"/>
		
	</VBox>
</mvc:View>